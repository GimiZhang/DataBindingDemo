<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="buttonClick"
            type="com.example.administrator.databindingdemo.FirstActivity.ButtonClick"/>

    </data>

<LinearLayout
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="@{buttonClick.onClickBase}"
        android:text="DataBinding_Base"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="@{buttonClick.onClickRecycle}"
        android:text="RecycleView"/>

</LinearLayout>
</layout>